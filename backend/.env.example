# Server Configuration
PORT=5000

# MySQL Database Configuration
# Ensure these match your Docker container or local MySQL setup
DB_HOST=localhost
DB_USER=root
DB_PASS=rootpassword
DB_NAME=auth_db
DB_DIALECT=mysql

# JWT Access Token Configuration
# Secret key for signing short-lived access tokens
JWT_SECRET=YOUR_ACCESS_TOKEN_SECRET_HERE
# Duration (e.g., 15m, 1h)
JWT_ACCESS_EXPIRATION=15m

# JWT Refresh Token Configuration
# Secret key for signing long-lived refresh tokens (Must be different from Access Secret)
JWT_REFRESH_SECRET=YOUR_REFRESH_TOKEN_SECRET_HERE
# Duration (e.g., 7d, 30d)
JWT_REFRESH_EXPIRATION=7d

# Google SSO Configuration
# Get this from Google Cloud Console -> Credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE.apps.googleusercontent.com